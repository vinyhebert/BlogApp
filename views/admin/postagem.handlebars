<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagem/add"<button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <small>Slug: {{descricao}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Data de criação: {{data}}</small><br>
            <a href="/admin/postagem/edit/{{_id}}">
                <button class="btn btn-success mt-4">Editar Postagem</button>
            </a>
            <form action="/admin/postagem/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-4">Deletar Postagem</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma Postagem Registrada</h4>
{{/each}}